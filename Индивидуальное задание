# PR1_Shutov_ind_zadanie
<html>
  <head>
  <meta charset="utf-8">
  <script src="http://code.jquery.com/jquery-1.11.0.min.js"></script>
  </head>
  <body>
  <table border ="5">
  <tr>
  <td rowspan="3" valign="top">
<br><input type="text" id="calcs">
<input type="button" id="butt" value="Perevesti">
<br><input type="text" id="calcs1">
<br><input type="text" id="calcs2">
<input type="button" id="butt2" value="+" onclick="plus()">
<input type="button" id="butt2" value="-" onclick="minus()">
<input type="button" id="butt2" value="*" onclick="umn()">
<input type="button" id="butt2" value="/" onclick="del()">
</tr>
<script>
function del()
{
calcs2.value=calcs.value/calcs1.value;
}
function umn()
{
calcs2.value=calcs.value*calcs1.value;
}
function minus()
{
calcs2.value=calcs.value-calcs1.value;
}
function plus()
{
calcs2.value=calcs.value-(-1)*calcs1.value;
}
$('#butt').click(function(){
  var t = +$('#calcs2').val();
  $('#calcs2').val(t.toString(2));
});
$('#butt').click(function(){
  var n = +$('#calcs').val();
  $('#calcs').val(n.toString(2));
});
$('#butt').click(function(){
  var m = +$('#calcs1').val();
  $('#calcs1').val(m.toString(2));
});
</script>
  </body>
</html>
